<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/apex_beige"
    tools:context=".Fragments.MapFragment">


    <ImageView
        android:id="@+id/img_background"
        android:layout_width="446dp"
        android:layout_height="167dp"
        android:contentDescription="@string/map"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/worldsedge" />

    <TextView
        android:id="@+id/tvMapTitle"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="110dp"
        android:fontFamily="@font/apex"
        android:textAlignment="center"
        android:textColor="#A4373D"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_background" />

    <TextView
        android:id="@+id/tv_remainigTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="493dp"
        android:fontFamily="@font/apex"
        android:text="@string/time"
        android:textColor="#A4373D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMapTitle"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Remaining time" />
</androidx.constraintlayout.widget.ConstraintLayout>